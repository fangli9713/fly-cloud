<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fly.finance.dao.AshareDao">
    <select id="selectAshareList" resultType="com.fangln.dd.dto.Ashare">
        select * from ashare_list order by id limit 300

    </select>

    <select id="selectAshareHistoryPriceList" parameterType="com.fly.finance.dto.HistoryPrice" resultType="com.fly.finance.dto.HistoryPrice">
        select * from ashare_history
        <where>
            <if test="code != null">and code = #{code}</if>
            <if test="date != null">and date = #{date}</if>
            <if test="psy != null">and #{psy} >= psy</if>
            <if test="close != null">and close > #{close}</if>
            <if test="date_gt != null">and date > #{date_gt}</if>
        </where>
        order by  date

    </select>

    <insert id="insertAshareHistoryPrice" parameterType="com.fly.finance.dto.HistoryPrice">
        insert into ashare_history (
        code,
        alias,
        date,
        open,
        close,
        high,
        low,
        volume,
        psy_type,
        psy,
        psyma,
        create_time)values (
        #{code},
        #{alias},
        #{date},
        #{open},
        #{close},
        #{high},
        #{low},
        #{volume},
        #{psy_type},
        #{psy},
        #{psyma},
        SYSDATE()
        )


    </insert>
    
    <select id="selectAshareTransactionList" parameterType="com.fly.finance.dto.AshareTransaction" resultType="com.fly.finance.dto.AshareTransaction">
        select * from ashare_transaction
        <where>
            <if test="code != null">and code = #{code}</if>
            <if test="date != null">and date = #{date}</if>
        </where>
    </select>

    <insert id="insertAshareTransaction" parameterType="com.fly.finance.dto.AshareTransaction" >
        insert into ashare_transaction(
          code,
          date,
          type,
          price,
          create_time

        )values (#{code},#{date},#{type},#{price},SYSDATE())

    </insert>

    <update id="updateAshareTransaction" parameterType="com.fly.finance.dto.AshareTransaction">
      update ashare_transaction
      <set>
        <if test="win_day != null"> win_day = #{win_day},</if>

      </set>
        where id=#{id}

    </update>

</mapper>